<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd" version="3.1">

	<persistence-unit name="backendPU" transaction-type="RESOURCE_LOCAL">
		<!-- Classes das tabelas -->
		<class>br.senac.rj.backend.entity.Usuario</class>
		<class>br.senac.rj.backend.entity.Aluno</class>
		<class>br.senac.rj.backend.entity.Turma</class>

		<properties>
			<!-- Classes das tabelas -->
			<property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/escola?useSSL=false&amp;serverTimezone=UTC" />
			<property name="jakarta.persistence.jdbc.user" value="root" />
			<property name="jakarta.persistence.jdbc.password" value="" />

			<!-- Criação automática das tabelas -->
			<!-- Não cria o banco de dados. Tem que criar o banco manualmente -->
			<!-- <property name="jakarta.persistence.schema-generation.database.action" value="update" /> -->
			<property name="hibernate.hbm2ddl.auto" value="update" />


			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>

	<persistence-unit name="backendPU2" transaction-type="RESOURCE_LOCAL">
		<!-- Classes das tabelas -->
		<class>br.senac.rj.backend.entity.Doador</class>
		<class>br.senac.rj.backend.entity.Doacao</class>
		<class>br.senac.rj.backend.entity.Usuario</class>

		<properties>
			<!-- Classes das tabelas -->
			<property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/redesdobem?useSSL=false&amp;serverTimezone=UTC" />
			<property name="jakarta.persistence.jdbc.user" value="root" />
			<property name="jakarta.persistence.jdbc.password" value="" />

			<!-- Criação automática das tabelas -->
			<!-- Não cria o banco de dados. Tem que criar o banco manualmente -->
			<!-- <property name="jakarta.persistence.schema-generation.database.action" value="update" /> -->
			<property name="hibernate.hbm2ddl.auto" value="update" />


			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>